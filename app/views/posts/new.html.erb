<h3> New Image Upload </h3>

<%= form_for @post, url: posts_path, html: { multipart: true } do |form| %>
  <% if @post.errors.any? %>
    <h2>Errors:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form.label :name, "Title" %>
  <%= form.text_field :name, placeholder:"Give a Title here" %>
  <%= form.label :image, "Upload Image" %><br/>
  <%= form.file_field :image %>
  <%= form.submit %>
<% end %>